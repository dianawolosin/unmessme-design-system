{
  "$schema": "https://design-tokens.org/schemas/1.0/schema.json",
  "color": {
    "primitive": {
      "slate": {
        "900": { "$value": "#121619", "$type": "color" },
        "800": { "$value": "#1E2327", "$type": "color" },
        "700": { "$value": "#2C3338", "$type": "color" }
      },
      "bone": {
        "100": { "$value": "#E0E1DD", "$type": "color" },
        "200": { "$value": "#C4C5C1", "$type": "color" }
      },
      "seafoam": {
        "main": { "$value": "#2A9D8F", "$type": "color" },
        "light": { "$value": "#4DC0B2", "$type": "color" },
        "dark": { "$value": "#1F7A70", "$type": "color" }
      },
      "terracotta": {
        "main": { "$value": "#E07A5F", "$type": "color" },
        "dark": { "$value": "#B3614C", "$type": "color" }
      },
      "iris": {
        "main": { "$value": "#8187DC", "$type": "color" },
        "dark": { "$value": "#676BB0", "$type": "color" }
      },
      "charcoal": {
        "main": { "$value": "#3D405B", "$type": "color" }
      }
    },
    "semantic": {
      "bg": {
        "canvas": { 
          "$value": "{color.primitive.slate.900}", 
          "$type": "color",
          "$description": "Main app background (Gunmetal Void)"
        },
        "surface": {
          "$value": "rgba(30, 35, 39, 0.6)", 
          "$type": "color",
          "$description": "Base glass surface color"
        }
      },
      "text": {
        "primary": { "$value": "{color.primitive.bone.100}", "$type": "color" },
        "secondary": { "$value": "rgba(224, 225, 221, 0.6)", "$type": "color" },
        "disabled": { "$value": "rgba(224, 225, 221, 0.3)", "$type": "color" },
        "inverse": { "$value": "{color.primitive.slate.900}", "$type": "color" }
      },
      "action": {
        "primary": { 
          "$value": "{color.primitive.seafoam.main}", 
          "$type": "color",
          "$description": "Primary action color (Unmess Button)"
        },
        "hover": { 
          "$value": "{color.primitive.seafoam.dark}", 
          "$type": "color" 
        }
      },
      "status": {
        "urgent": { "$value": "{color.primitive.terracotta.main}", "$type": "color" },
        "analysis": { "$value": "{color.primitive.iris.main}", "$type": "color" },
        "success": { "$value": "{color.primitive.seafoam.main}", "$type": "color" }
      },
      "border": {
        "subtle": { "$value": "rgba(255, 255, 255, 0.08)", "$type": "color" },
        "highlight": { "$value": "rgba(255, 255, 255, 0.15)", "$type": "color" }
      }
    }
  }
}
