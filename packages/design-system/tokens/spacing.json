{
  "$schema": "https://design-tokens.org/schemas/1.0/schema.json",
  "spacing": {
    "primitive": {
      "base": { "$value": "0.25rem", "$type": "dimension", "$description": "4px base unit" },
      "scale": {
        "1": { "$value": "0.25rem", "$type": "dimension" },
        "2": { "$value": "0.5rem", "$type": "dimension" },
        "3": { "$value": "0.75rem", "$type": "dimension" },
        "4": { "$value": "1rem", "$type": "dimension" },
        "6": { "$value": "1.5rem", "$type": "dimension" },
        "8": { "$value": "2rem", "$type": "dimension" },
        "12": { "$value": "3rem", "$type": "dimension" },
        "16": { "$value": "4rem", "$type": "dimension" }
      }
    },
    "semantic": {
      "gap": {
        "xs": { "$value": "{spacing.primitive.scale.2}", "$type": "dimension", "$description": "Tight gap (chips)" },
        "sm": { "$value": "{spacing.primitive.scale.3}", "$type": "dimension", "$description": "Small gap" },
        "md": { "$value": "{spacing.primitive.scale.4}", "$type": "dimension", "$description": "Default component gap" },
        "lg": { "$value": "{spacing.primitive.scale.6}", "$type": "dimension", "$description": "Section gap" }
      },
      "padding": {
        "chip": { "$value": "0px 4px", "$type": "dimension", "$description": "Tight chip padding (V3 Masking Tape)" },
        "card": { "$value": "{spacing.primitive.scale.6}", "$type": "dimension", "$description": "Standard card padding" },
        "screen": { "$value": "{spacing.primitive.scale.4}", "$type": "dimension", "$description": "Screen edge padding" }
      },
      "layout": {
        "max_width": { "$value": "1280px", "$type": "dimension" },
        "sidebar": { "$value": "280px", "$type": "dimension" }
      }
    }
  }
}
