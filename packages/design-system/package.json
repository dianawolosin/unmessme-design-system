{
  "name": "@unmessme/design-system",
  "version": "0.1.0",
  "description": "UnmessMe Design System - MUI wrapper with custom theme and components",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./theme": {
      "types": "./src/theme/index.ts",
      "import": "./src/theme/index.ts"
    },
    "./tokens/*": "./tokens/*.json"
  },
  "files": [
    "dist",
    "tokens",
    "components"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.8.1"
  },
  "keywords": [
    "design-system",
    "material-ui",
    "mui",
    "react",
    "typescript",
    "dark-mode",
    "unmessme"
  ],
  "author": "UnmessMe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unmessme/design-system",
    "directory": "packages/design-system"
  },
  "dependencies": {
    "framer-motion": "^12.23.24"
  }
}
